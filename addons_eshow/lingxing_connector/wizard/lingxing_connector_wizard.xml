        />-->
    </record>

    <record
        id="action_connector_lingxing_debug_wizard"
        model="ir.actions.act_window"
    >
        <field name="name">Lingxing Connector Actions (Debug)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">connector.lingxing.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_connector_lingxing_debug_wizard" />
        <field name="target">new</field>
        <!--<field
            name="binding_model_id"
            ref="purchase_plan.model_purchase_plan"
        />-->
    </record>

    <menuitem
        id="menu_lingxing_connector_wizard"
        name="Lingxing Connector Actions"
        sequence="10"
        parent="menu_lingxing_connector"
        groups="eshow_common_connector_lib.group_connector_user,eshow_common_connector_lib.group_connector_manager"
        action="action_connector_lingxing_wizard"
    />

    <menuitem
        id="menu_lingxing_connector_wizard_2"
        name="Lingxing Connector Actions"
        sequence="10"
