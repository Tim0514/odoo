        groups="eshow_common_connector_lib.group_connector_user,eshow_common_connector_lib.group_connector_manager"
        action="action_connector_lingxing_wizard"
    />

    <menuitem
        id="menu_lingxing_connector_debug_wizard"
        name="Lingxing Connector Actions"
        sequence="15"
        parent="menu_lingxing_connector"
        groups="eshow_common_connector_lib.group_connector_manager"
        action="action_connector_lingxing_debug_wizard"
    />

    <menuitem
        id="menu_lingxing_connector_debug_wizard_2"
        name="Lingxing Connector Actions (Debug)"
        sequence="15"
        parent="menu_lingxing_connector_2"
        groups="eshow_common_connector_lib.group_connector_manager"
        action="action_connector_lingxing_debug_wizard"
    />


</odoo>
